{
  "exclude": [
    "**/*.test.ts",
    "**/*.stub.ts",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@acme-corp/*": [
        "./packages/*/"
      ]
    }
  }
}