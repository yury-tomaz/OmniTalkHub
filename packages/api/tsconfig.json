{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/",
    "target": "ES2015",
    "module": "CommonJS",
    "types": ["node", "@types/jest"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
